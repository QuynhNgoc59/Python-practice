==> Approach 2:
import pandas as pd

def categorize_products(activities: pd.DataFrame) -> pd.DataFrame:
    # Concatenate separate records of product names into a single string
    concatenated_product = (
        activities
        .sort_values(by='product', ascending=True)
        .drop_duplicates()
        .groupby(by='sell_date')
        .agg(products = ('product', lambda x: ','.join(x)))
        .reset_index()
    )

    # Calculate number of products within each string
    concatenated_product['num_sold'] = concatenated_product['products'].apply(lambda y: len(y.split(',')))

    return concatenated_product.sort_values(by='sell_date', ascending=True)[['sell_date', 'num_sold', 'products']]
    
